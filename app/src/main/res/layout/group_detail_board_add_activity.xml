<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintBottom_toTopOf="@id/view_line_toolBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/public_ic_left_arrow"
        app:titleTextColor="@color/black" />

    <View
        android:id="@+id/view_line_toolBar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray_box"
        app:layout_constraintBottom_toTopOf="@id/constraint_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolBar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        app:layout_constraintBottom_toTopOf="@id/view_line_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_line_toolBar">

        <EditText
            android:id="@+id/edt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/group_detail_board_add_hint_board_title"
            android:textSize="@dimen/wd2_main_title"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/edt_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edt_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:gravity="start|top"
            android:hint="@string/group_detail_board_add_hint_board_content"
            android:minLines="15"
            android:textSize="@dimen/wd2_normal_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edt_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view_line_content"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray_box"
        app:layout_constraintBottom_toTopOf="@id/constraint_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraint_content" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/view_line_content">

        <ImageView
            android:id="@+id/img_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/public_ic_image"
            app:layout_constraintBottom_toTopOf="@id/cardView_photo_1"
            app:layout_constraintEnd_toStartOf="@id/txt_add_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_add_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/group_detail_board_add_txt_add_image"
            android:textSize="@dimen/wd2_normal_text"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/img_gallery"
            app:layout_constraintEnd_toStartOf="@id/txt_image_limit"
            app:layout_constraintStart_toEndOf="@id/img_gallery"
            app:layout_constraintTop_toTopOf="@id/img_gallery" />

        <TextView
            android:id="@+id/txt_image_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/group_detail_board_add_txt_image_limit"
            android:textColor="@color/normal_gray_txt"
            app:layout_constraintBottom_toBottomOf="@id/txt_add_image"
            app:layout_constraintStart_toEndOf="@id/txt_add_image"
            app:layout_constraintTop_toTopOf="@id/txt_add_image" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_photo_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="4dp"
            app:layout_constraintEnd_toStartOf="@id/cardView_photo_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_gallery">

            <ImageView
                android:id="@+id/img_photo_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/group_detail_board_add_border_image"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/img_cancel_photo_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-7dp"
            android:layout_marginEnd="-7dp"
            android:elevation="10dp"
            android:src="@drawable/public_ic_cancel_image"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/cardView_photo_1"
            app:layout_constraintTop_toTopOf="@id/cardView_photo_1" />

        <ImageView
            android:id="@+id/img_plus_photo_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:src="@drawable/public_ic_fab_add"
            app:layout_constraintBottom_toBottomOf="@id/cardView_photo_1"
            app:layout_constraintEnd_toEndOf="@id/cardView_photo_1"
            app:layout_constraintStart_toStartOf="@id/cardView_photo_1"
            app:layout_constraintTop_toTopOf="@id/cardView_photo_1" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_photo_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:visibility="gone"
            app:cardCornerRadius="4dp"
            app:layout_constraintBottom_toBottomOf="@id/cardView_photo_1"
            app:layout_constraintEnd_toStartOf="@id/cardView_photo_3"
            app:layout_constraintStart_toEndOf="@id/cardView_photo_1"
            app:layout_constraintTop_toTopOf="@id/cardView_photo_1">

            <ImageView
                android:id="@+id/img_photo_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/group_detail_board_add_border_image"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/img_cancel_photo_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-7dp"
            android:layout_marginEnd="-7dp"
            android:elevation="10dp"
            android:src="@drawable/public_ic_cancel_image"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/cardView_photo_2"
            app:layout_constraintTop_toTopOf="@id/cardView_photo_2" />

        <ImageView
            android:id="@+id/img_plus_photo_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:src="@drawable/public_ic_fab_add"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/cardView_photo_2"
            app:layout_constraintEnd_toEndOf="@id/cardView_photo_2"
            app:layout_constraintStart_toStartOf="@id/cardView_photo_2"
            app:layout_constraintTop_toTopOf="@id/cardView_photo_2" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_photo_3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:visibility="gone"
            app:cardCornerRadius="4dp"
            app:layout_constraintBottom_toBottomOf="@id/cardView_photo_2"
            app:layout_constraintStart_toEndOf="@id/cardView_photo_2"
            app:layout_constraintTop_toTopOf="@id/cardView_photo_2">

            <ImageView
                android:id="@+id/img_photo_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/group_detail_board_add_border_image"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/img_cancel_photo_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-7dp"
            android:layout_marginEnd="-7dp"
            android:elevation="10dp"
            android:src="@drawable/public_ic_cancel_image"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/cardView_photo_3"
            app:layout_constraintTop_toTopOf="@id/cardView_photo_3" />

        <ImageView
            android:id="@+id/img_plus_photo_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:src="@drawable/public_ic_fab_add"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/cardView_photo_3"
            app:layout_constraintEnd_toEndOf="@id/cardView_photo_3"
            app:layout_constraintStart_toStartOf="@id/cardView_photo_3"
            app:layout_constraintTop_toTopOf="@id/cardView_photo_3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_add_board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/public_border_btn"
        android:padding="16dp"
        android:text="@string/group_detail_btn_write_board"
        android:textColor="@color/white"
        android:textSize="@dimen/wd2_main_title"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>