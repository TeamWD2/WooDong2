<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_bg"
    tools:context=".presentation.signin.SignInActivity">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/gangwon_edu_modu_bold"
        android:text="@string/wd2"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/txt_title_full"
        app:layout_constraintEnd_toEndOf="@id/txt_title_full"
        app:layout_constraintStart_toStartOf="@id/txt_title_full" />

    <TextView
        android:id="@+id/txt_title_full"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/gangwon_edu_modu_light"
        android:text="@string/wd2_full"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/img_wd2"
        app:layout_constraintEnd_toEndOf="@id/img_wd2"
        app:layout_constraintStart_toStartOf="@id/img_wd2" />

    <ImageView
        android:id="@+id/img_wd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/start_wd2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/img_decoration"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/start_decoration"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
