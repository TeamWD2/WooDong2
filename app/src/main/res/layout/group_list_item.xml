<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_group_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txt_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/frameLayout"
        app:layout_constraintStart_toEndOf="@id/img_group_profile"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="나이X 남여 상관X 모여라" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/txt_tag_location"
        app:layout_constraintStart_toEndOf="@id/img_group_profile"
        app:layout_constraintTop_toBottomOf="@id/txt_title">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_member_1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:cardCornerRadius="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/txt_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_member_profile_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start|top"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_member_2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/txt_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_member_profile_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start|top"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_member_3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            app:cardCornerRadius="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/txt_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_member_profile_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start|top"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <TextView
        android:id="@+id/txt_member_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/frameLayout"
        app:layout_constraintStart_toEndOf="@id/frameLayout"
        app:layout_constraintTop_toTopOf="@id/frameLayout"
        tools:text="41명" />

    <TextView
        android:id="@+id/txt_tag_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:background="#C5C5C5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txt_tag_category"
        app:layout_constraintStart_toEndOf="@id/img_group_profile"
        app:layout_constraintTop_toBottomOf="@id/frameLayout"
        tools:text="곡선동" />

    <TextView
        android:id="@+id/txt_tag_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#C5C5C5"
        app:layout_constraintBottom_toBottomOf="@id/txt_tag_location"
        app:layout_constraintEnd_toStartOf="@id/txt_tag_age"
        app:layout_constraintStart_toEndOf="@id/txt_tag_location"
        app:layout_constraintTop_toTopOf="@id/txt_tag_location"
        tools:text="동네친구" />

    <TextView
        android:id="@+id/txt_tag_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:background="#C5C5C5"
        app:layout_constraintBottom_toBottomOf="@id/txt_tag_category"
        app:layout_constraintStart_toEndOf="@id/txt_tag_category"
        app:layout_constraintTop_toTopOf="@id/txt_tag_category"
        tools:text="2~30대" />
</androidx.constraintlayout.widget.ConstraintLayout>