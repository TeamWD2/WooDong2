<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_group_profile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txt_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/txt_tag_category"
        app:layout_constraintStart_toEndOf="@id/img_group_profile"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="나이X 남여 상관X 모여라" />

    <TextView
        android:id="@+id/txt_tag_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:background="#C5C5C5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txt_tag_age"
        app:layout_constraintStart_toEndOf="@id/img_group_profile"
        app:layout_constraintTop_toBottomOf="@id/txt_name"
        tools:text="동네친구" />

    <TextView
        android:id="@+id/txt_tag_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#C5C5C5"
        app:layout_constraintBottom_toBottomOf="@id/txt_tag_category"
        app:layout_constraintEnd_toStartOf="@id/txt_tag_member_limit"
        app:layout_constraintStart_toEndOf="@id/txt_tag_category"
        app:layout_constraintTop_toTopOf="@id/txt_tag_category"
        tools:text="연령대" />

    <TextView
        android:id="@+id/txt_tag_member_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:background="#C5C5C5"
        app:layout_constraintBottom_toBottomOf="@id/txt_tag_age"
        app:layout_constraintStart_toEndOf="@id/txt_tag_age"
        app:layout_constraintTop_toTopOf="@id/txt_tag_age"
        tools:text="41 / 50명" />
</androidx.constraintlayout.widget.ConstraintLayout>