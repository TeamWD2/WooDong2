<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_page_written_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
/>
    <TextView
        android:id="@+id/txt_empty_group_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/group_text_empty_group_list"
        android:textSize="@dimen/wd2_normal_text"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/my_page_written_recycler_view"
        app:layout_constraintEnd_toEndOf="@id/my_page_written_recycler_view"
        app:layout_constraintStart_toStartOf="@id/my_page_written_recycler_view"
        app:layout_constraintTop_toTopOf="@id/my_page_written_recycler_view" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/my_page_written_recycler_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/my_page_written_recycler_view" />
</androidx.constraintlayout.widget.ConstraintLayout>